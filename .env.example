# Talos Procurement AI Platform - Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# Convex Configuration
# ===========================================
CONVEX_DEPLOYMENT=your-deployment-name
CONVEX_URL=https://your-deployment.convex.cloud
CONVEX_ADMIN_KEY=your-admin-key

# ===========================================
# Anthropic API (for AI agents)
# ===========================================
ANTHROPIC_API_KEY=sk-ant-your-api-key

# ===========================================
# Temporal Configuration
# ===========================================
TEMPORAL_ADDRESS=localhost:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=procurement-tasks

# ===========================================
# Jaggaer Integration
# ===========================================
JAGGAER_BASE_URL=https://your-instance.jaggaer.com
JAGGAER_USERNAME=your-username
JAGGAER_PASSWORD=your-password
JAGGAER_SENDER_ID=your-sender-id
JAGGAER_SENDER_DOMAIN=NetworkID
JAGGAER_SHARED_SECRET=your-shared-secret

# ===========================================
# Server Configuration
# ===========================================
# TypeScript/Hono Server
NODE_ENV=development
PORT=3000

# Python/FastAPI Server
PYTHON_ENV=development
FASTAPI_PORT=8000
FASTAPI_HOST=0.0.0.0

# ===========================================
# Slack Integration (for notifications)
# ===========================================
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_DEFAULT_CHANNEL=procurement-alerts

# ===========================================
# Email Configuration (for notifications)
# ===========================================
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-email@university.edu
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=procurement@university.edu
SMTP_FROM_NAME=Talos Procurement AI

# ===========================================
# Database (if using external PostgreSQL)
# ===========================================
# DATABASE_URL=postgresql://user:password@localhost:5432/talos

# ===========================================
# Redis (for caching/rate limiting)
# ===========================================
# REDIS_URL=redis://localhost:6379

# ===========================================
# Security
# ===========================================
JWT_SECRET=your-jwt-secret-key-min-32-chars
JWT_EXPIRY=24h
API_RATE_LIMIT=100
API_RATE_WINDOW=60

# ===========================================
# Feature Flags
# ===========================================
ENABLE_PRICE_ALERTS=true
ENABLE_HMM_PREDICTIONS=true
ENABLE_ANOMALY_DETECTION=true
ENABLE_CROSS_UNIVERSITY_NETWORK=true
ENABLE_JAGGAER_INTEGRATION=false

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=json

# ===========================================
# Trial/Subscription (for SaaS deployment)
# ===========================================
TRIAL_DURATION_DAYS=45
MONTHLY_SUBSCRIPTION_PRICE=30000
PERFORMANCE_FEE_PERCENT=36
